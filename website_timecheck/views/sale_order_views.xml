<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="print_portal_quotation" string="Print Quotation" type="object" states="draft,sent" class="oe_highlight" groups="website_timecheck.group_timecheck_basic"/>
                </xpath>
                <field name="note" position="before">
                    <group>
                        <field name="payment_method"/>
                        <field name="payment_desc"/>
                        <field name="picking_date"/>
                        <field name="other_inquiry"/>
                    </group>
                </field>
            </field>
        </record>

    </data>
</openerp>
