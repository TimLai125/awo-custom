<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="supplier_stock_revaluation_wizard" model="ir.ui.view">
            <field name="name">supplier.stock.revaluation.wizard</field>
            <field name="model">supplier.stock.revaluation.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <p class="oe_grey">
                        This action will revalue supplier stock using the latest exchange rates.
                    </p>
                    <footer>
                        <button name="action_supplier_stock_revaluation"
                                type="object"
                                string="Run"
                                class="oe_highlight"/>
                        or
                        <button special="cancel"
                                string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Supplier Stock Revaluation"
                    res_model="supplier.stock.revaluation.wizard"
                    src_model="supplier.stock"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"
                    id="action_supplier_stock_revaluation_wizard"/>
    </data>
</openerp>
